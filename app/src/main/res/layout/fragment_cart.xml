<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Sticky Header -->
    <LinearLayout
        android:id="@+id/navigationTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="115dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cart_title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="@string/cart_delete_all"
            android:textColor="#00008B" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigationTransaction">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section Counter -->
            <LinearLayout
                android:id="@+id/sectionCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/countProduct"
                        android:layout_width="19dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/cart_total_product_num"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/titleProduct"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cart_total_product"
                        android:textSize="15sp" />
                </LinearLayout>


                <Space
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/currency"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/product_currency"
                        />

                    <TextView
                        android:id="@+id/countPrice"
                        android:layout_width="107dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cart_total_price"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Section Produk -->
            <LinearLayout
                android:id="@+id/sectionProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- Produk 1 + Adjustment Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/product_border"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--List Product -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/oftast" />

                        <!--Detail Product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/productName1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/product_series"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"/>

                            <TextView
                                android:id="@+id/productDescription1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/product_description"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/productPrice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/product_price"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <Space
                            android:layout_width="130dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/buttonDelete"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_button_bg"
                            android:contentDescription="Hapus produk"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/trash" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_border"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Kurangi -->
                            <ImageButton
                                android:id="@+id/buttonMinus"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Kurangi"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/minus" />

                            <!-- Jumlah -->
                            <TextView
                                android:id="@+id/textQuantity"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="16sp" />

                            <!-- Tambah -->
                            <ImageButton
                                android:id="@+id/buttonPlus"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Tambah"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/plus" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <!-- Produk lainnya bisa ditambah di sini -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/product_border"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--List Product -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageProduct2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/samla" />

                        <!--Detail Product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/productName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="SAMLA"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/productDescription2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="kotak penyimpanan bening"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/productPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Rp19.900"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <Space
                            android:layout_width="130dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/buttonDelete2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_button_bg"
                            android:contentDescription="Hapus produk"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/trash" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_border"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Kurangi -->
                            <ImageButton
                                android:id="@+id/buttonMinus2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Kurangi"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/minus" />

                            <!-- Jumlah -->
                            <TextView
                                android:id="@+id/textQuantity2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="16sp" />

                            <!-- Tambah -->
                            <ImageButton
                                android:id="@+id/buttonPlus2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Tambah"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/plus" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/product_border"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--List Product -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageProduct3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/reko" />

                        <!--Detail Product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/productName3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="REKO"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/productDescription3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="gelas, putih, kecil"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/productPrice3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Rp9.900"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <Space
                            android:layout_width="130dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/buttonDelete3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_button_bg"
                            android:contentDescription="Hapus produk"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/trash" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_border"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Kurangi -->
                            <ImageButton
                                android:id="@+id/buttonMinus3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Kurangi"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/minus" />

                            <!-- Jumlah -->
                            <TextView
                                android:id="@+id/textQuantity3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="16sp" />

                            <!-- Tambah -->
                            <ImageButton
                                android:id="@+id/buttonPlus3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="Tambah"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/plus" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            </LinearLayout>

            <!--Section Pengiriman-->
            <LinearLayout
                android:id="@+id/sectionPengantaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp">

                <!--            Header Pengiriman-->
                <LinearLayout
                    android:id="@+id/headerPengantaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/titlePengantaran"
                        android:layout_width="180dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="Metode Pengantaran"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="75dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/headerPengantaran2"
                        android:layout_width="115dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="(Wajib Diisi)"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/headerAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/titleAlamat"
                        android:layout_width="180dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="Alamat / Kode Pos"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="Jl. KH Wahid Hasyim 27, Kudus | 59313"
                        android:textSize="15sp" />

                </LinearLayout>

                <!--            Section Button Delivery-->
                <LinearLayout
                    android:id="@+id/buttonDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/local_shipping" />


                    <LinearLayout
                        android:id="@+id/sectionbuttonDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tersedia pengantaran Delivery dengan biaya tambahan Rp. 25.000"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <!--            Section Pick Up Button-->
                <LinearLayout
                    android:id="@+id/buttonPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/product_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:id="@+id/sectionButtonPickUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/pickup_point" />

                        <LinearLayout
                            android:id="@+id/sectionbuttonPickUp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titlePickUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pick Up Point"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/descPickUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ambil di Pick-up point terdekat"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detailButtonPickUpLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/titlePickUpLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="23 Paskal Pick-Up Point"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descPickUpLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jl. Pasir Kaliki No.25"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            </LinearLayout>

            <!--            Section Ringkasan Pesanan-->
            <LinearLayout
                android:id="@+id/ringkasanPesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/product_border"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/headerRingkasanPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ringkasan Pemesanan"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/sectionTotalProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Jumlah Produk"
                        android:textSize="13sp" />

                    <Space
                        android:layout_width="160dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/productCounter"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="3"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:id="@+id/sectionSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Subtotal sebelum pengantaran"
                        android:textSize="13sp" />

                    <Space
                        android:layout_width="110dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/biayaSubTotal"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp. 39.900"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sectionBiayaPengantaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Biaya pengantaran"
                        android:textSize="13sp" />

                    <Space
                        android:layout_width="110dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/biayaPengantaran"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="GRATIS"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:id="@+id/sectionBiayaTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Total Biaya"
                        android:textSize="13sp" />

                    <Space
                        android:layout_width="110dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/totalBiaya"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp. 39.900"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sectionButtonCheckOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonCheckOut"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="CheckOut Transaction" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
